<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:srcCompat="@drawable/icon" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/avera_brush"
        android:text="Modo de jogo"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold" />
    <RadioGroup
        android:id="@+id/rgModoDeJogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <RadioButton
            android:id="@+id/rdJogadorVsJogador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JOGADOR VS JOGADOR"
            android:fontFamily="@font/avera_brush"
            android:textFontWeight="700"
            android:textSize="16sp"
            />

        <RadioButton
            android:id="@+id/rdJogadorVsComputador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JOGADOR VS COMPUTADOR"
            android:fontFamily="@font/avera_brush"
            android:textFontWeight="700"
            android:textSize="16sp"/>
    </RadioGroup>


    <Button
        android:id="@+id/btnIniciar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/avera_brush"
        android:onClick="iniciarClick"
        android:background="#ec6426"
        android:text="Iniciar"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:id="@+id/tabuleiro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/btn00"
                android:tag="0,0"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text=""
                android:background="@drawable/btnborder"
                android:fontFamily="@font/avera_brush"
                android:textFontWeight="700"
                android:textSize="100sp"
                android:textColor="#4169e1"
                android:layout_marginRight="5dp"
                android:onClick="jogar"/>
            <Button
                android:id="@+id/btn01"
                android:tag="0,1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text=""
                android:background="@drawable/btnborder"
                android:fontFamily="@font/avera_brush"
                android:textFontWeight="700"
                android:textSize="100sp"
                android:textColor="#4169e1"
                android:layout_marginRight="5dp"
                android:onClick="jogar"/>
            <Button
                android:id="@+id/btn02"
                android:tag="0,2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text=""
                android:background="@drawable/btnborder"
                android:fontFamily="@font/avera_brush"
                android:textFontWeight="700"
                android:textSize="100sp"
                android:textColor="#4169e1"
                android:onClick="jogar"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/btn10"
                android:tag="1,0"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text=""
                android:background="@drawable/btnborder"
                android:fontFamily="@font/avera_brush"
                android:textFontWeight="700"
                android:textSize="100sp"
                android:textColor="#4169e1"
                android:layout_marginRight="5dp"
                android:onClick="jogar"/>
            <Button
                android:id="@+id/btn11"
                android:tag="1,1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text=""
                android:background="@drawable/btnborder"
                android:fontFamily="@font/avera_brush"
                android:textFontWeight="700"
                android:textSize="100sp"
                android:textColor="#4169e1"
                android:layout_marginRight="5dp"
                android:onClick="jogar"/>
            <Button
                android:id="@+id/btn12"
                android:tag="1,2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text=""
                android:background="@drawable/btnborder"
                android:fontFamily="@font/avera_brush"
                android:textFontWeight="700"
                android:textSize="100sp"
                android:textColor="#4169e1"
                android:onClick="jogar"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn20"
                android:tag="2,0"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text=""
                android:background="@drawable/btnborder"
                android:fontFamily="@font/avera_brush"
                android:textFontWeight="700"
                android:textSize="100sp"
                android:textColor="#4169e1"
                android:layout_marginRight="5dp"
                android:onClick="jogar"/>
            <Button
                android:id="@+id/btn21"
                android:tag="2,1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text=""
                android:background="@drawable/btnborder"
                android:fontFamily="@font/avera_brush"
                android:textFontWeight="700"
                android:textSize="100sp"
                android:textColor="#4169e1"
                android:layout_marginRight="5dp"
                android:onClick="jogar"/>
            <Button
                android:id="@+id/btn22"
                android:tag="2,2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text=""
                android:background="@drawable/btnborder"
                android:fontFamily="@font/avera_brush"
                android:textFontWeight="700"
                android:textSize="100sp"
                android:textColor="#4169e1"
                android:onClick="jogar"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtVezJogador"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txtVencedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TESTE"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#0000FF"
            android:textAlignment="viewEnd"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            />
    </LinearLayout>
</LinearLayout>